<%= form_with(model: article, local: true, class: "space-y-4") do |form| %>
  <% if article.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded">
      <h2 class="font-bold"><%= pluralize(article.errors.count, "error") %> prevented this article from being saved:</h2>
      <ul class="list-disc pl-5">
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :title, class: "block font-medium text-gray-700" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded shadow-sm" %>
  </div>

  <div class="space-y-2">
    <%= form.label :content, class: "block font-medium text-gray-700" %>
    <%= form.text_area :content, class: "w-full px-3 py-2 border rounded shadow-sm" %>
  </div>

  <div class="space-y-2">
    <%= form.label :image, class: "block font-medium text-gray-700" %>
    <%= form.file_field :image, class: "w-full px-3 py-2 border rounded shadow-sm" %>
  </div>

  <div>
    <%= form.submit "Save", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
